<h1>Say#index</h1>
<p>Find me in app/views/say/index.html.erb</p>

<div style="padding:50px;">
<%= form_tag say_decision_path do %>
<!-- <form_tag say_hello_path do %> -->
  <label for="name">Name</label>
    <%= text_field_tag :name %>
  <div class="field">
    <%= label_tag :say %><br />
    <%= label_tag :say_label, "Hello", :value => "hello"  %>
    <%= radio_button_tag :say, 'hello' %>
    <%= label_tag :say_label, "Goodbye", :value => "bye" %>
    <%= radio_button_tag :say, 'bye', :checked => true %>
  </div>
 <%= submit_tag "Submit" %>
<% end %>
</div>
